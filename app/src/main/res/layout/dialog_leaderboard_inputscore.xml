<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteTrans">

    <TextView
        android:id="@+id/text_dialog_rating"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/belgrano"
        android:text="@string/dialog_rating"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/text_dialog_attempts"
        app:layout_constraintStart_toEndOf="@+id/text_dialog_attempts_title" />

    <TextView
        android:id="@+id/text_dialog_attempts_title"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/belgrano"
        android:textColor="@color/colorWhite"
        android:text="@string/dialog_attempts"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/text_dialog_instruction_title"
        app:layout_constraintTop_toBottomOf="@+id/text_dialog_rating_title" />

    <TextView
        android:id="@+id/text_dialog_attempts"
        android:layout_width="24dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/belgrano"
        android:textColor="@color/colorWhite"
        android:text="@string/dialog_rating"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/text_dialog_attempts_title"
        app:layout_constraintTop_toBottomOf="@+id/text_dialog_rating_title" />

    <TextView
        android:id="@+id/text_dialog_instruction_title"
        android:layout_width="211dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/belgrano"
        android:text="@string/dialog_message"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_dialog_attempts" />

    <EditText
        android:id="@+id/edit_dialog_name"
        android:layout_width="201dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/belgrano"
        android:inputType="text"
        android:hint="@string/enter_name"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_dialog_instruction_title" />

    <TextView
        android:id="@+id/text_dialog_rating_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/belgrano"
        android:textColor="@color/colorWhite"
        android:text="@string/list_rating"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/text_dialog_instruction_title"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>